<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ProgressBar 배경 -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" /> <!-- 둥근 모서리 반경 설정 -->
            <solid android:color="#D3D3D3" /> <!-- 배경색 (라이트 그레이) -->
        </shape>
    </item>

    <!-- ProgressBar 진행 부분 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="20dp" /> <!-- 둥근 모서리 반경 설정 -->
                <solid android:color="#3379FE" /> <!-- 진행색 (파란색) -->
            </shape>
        </clip>
    </item>

</layer-list>
