<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/algLayout"
    android:importantForAccessibility="yes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_result_fragment_background_white_stroke_10"
    android:orientation="vertical"
    android:paddingVertical="15dp"
    android:paddingHorizontal="18dp">

    <TextView
        android:id="@+id/algTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/wanted_sans_bold"
        android:text="@string/algResultText"
        android:textColor="@color/gray_950"
        android:textSize="20sp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/result_alg_chipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="0dp"
        android:layout_marginTop="10dp"
        android:foregroundGravity="center"
        app:chipSpacing="15dp"
        app:chipSpacingHorizontal="15dp">
    </com.google.android.material.chip.ChipGroup>


</LinearLayout>