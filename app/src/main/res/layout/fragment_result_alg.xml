<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_result_fragment_background_white_stroke_10"
    android:orientation="vertical"
    android:paddingVertical="15dp"
    android:paddingHorizontal="18dp"
    tools:context=".ResultAlgFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/wanted_sans_bold"
        android:text="@string/algResultText"
        android:textColor="@color/gray_950"
        android:textSize="20sp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/result_alg_chipGroup"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="0dp"
        android:layout_marginTop="10dp"
        android:foregroundGravity="center"
        app:chipSpacing="15dp"
        app:chipSpacingHorizontal="15dp">

        <!-- 구현 시 삭제 -->
        <com.google.android.material.chip.Chip
            style="@style/AllergyChip"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="@string/allergy_wheat"
            android:textAlignment="center"
            android:textAppearance="@style/chipText"
            app:chipMinTouchTargetSize="0dp" />

        <com.google.android.material.chip.Chip
            style="@style/AllergyChip"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="@string/allergy_peach"
            android:textAlignment="center"
            android:textAppearance="@style/chipText"
            app:chipMinTouchTargetSize="0dp" />

        <com.google.android.material.chip.Chip
            style="@style/AllergyChip"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="@string/allergy_tomato"
            android:textAlignment="center"
            android:textAppearance="@style/chipText"
            app:chipMinTouchTargetSize="0dp" />


    </com.google.android.material.chip.ChipGroup>


</LinearLayout>