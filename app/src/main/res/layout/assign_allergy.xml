<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/semi_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    <TextView
        android:id="@+id/stepText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/wantedsans_semibold"
        android:text="STEP 5"
        android:textColor="@color/azure_radience_500"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/wantedsans_semibold"
        android:text="갖고있는 알레르기 정보를\n알려주세요."
        android:textColor="@color/athens_gray_950"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stepText" />

    <com.google.android.material.chip.ChipGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:chipSpacingHorizontal="10dp"
        app:chipSpacingVertical="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questionText">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip1"
            style="@style/AllergyChip"
            android:layout_width="98dp"
            android:layout_height="58dp"
            android:layout_marginBottom="60dp"
            android:text="없음"
            android:textAlignment="center"
            android:textAppearance="@style/chipText"
            app:chipMinTouchTargetSize="0dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip2"
            style="@style/AllergyChip"
            android:layout_width="98dp"
            android:layout_height="58dp"
            android:layout_marginBottom="60dp"
            android:text="메밀"
            android:textAlignment="center"
            android:textAppearance="@style/chipText"
            app:chipMinTouchTargetSize="0dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip3"
            style="@style/AllergyChip"
            android:layout_width="98dp"
            android:layout_height="58dp"
            android:layout_marginBottom="60dp"
            android:text="밀"
            android:textAlignment="center"
            android:textAppearance="@style/chipText"
            app:chipMinTouchTargetSize="0dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip4"
            style="@style/AllergyChip"
            android:layout_width="98dp"
            android:layout_height="58dp"
            android:layout_marginBottom="60dp"
            android:text="대두"
            android:textAlignment="center"
            android:textAppearance="@style/chipText"
            app:chipMinTouchTargetSize="0dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip5"
            style="@style/AllergyChip"
            android:layout_width="98dp"
            android:layout_height="58dp"
            android:layout_marginBottom="60dp"
            android:text="땅콩"
            android:textAlignment="center"
            android:textAppearance="@style/chipText"
            app:chipMinTouchTargetSize="0dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip6"
            style="@style/AllergyChip"
            android:layout_width="98dp"
            android:layout_height="58dp"
            android:layout_marginBottom="60dp"
            android:text="호두"
            android:textAlignment="center"
            android:textAppearance="@style/chipText"
            app:chipMinTouchTargetSize="0dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip7"
            style="@style/AllergyChip"
            android:layout_width="98dp"
            android:layout_height="58dp"
            android:layout_marginBottom="60dp"
            android:text="잣"
            android:textAlignment="center"
            android:textAppearance="@style/chipText"
            app:chipMinTouchTargetSize="0dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip8"
            style="@style/AllergyChip"
            android:layout_width="98dp"
            android:layout_height="58dp"
            android:layout_marginBottom="60dp"
            android:text="아황산"
            android:textAlignment="center"
            android:textAppearance="@style/chipText"
            app:chipMinTouchTargetSize="0dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip9"
            style="@style/AllergyChip"
            android:layout_width="98dp"
            android:layout_height="58dp"
            android:layout_marginBottom="60dp"
            android:text="복숭아"
            android:textAlignment="center"
            android:textAppearance="@style/chipText"
            app:chipMinTouchTargetSize="0dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip10"
            style="@style/AllergyChip"
            android:layout_width="98dp"
            android:layout_height="58dp"
            android:layout_marginBottom="60dp"
            android:text="토마토"
            android:textAlignment="center"
            android:textAppearance="@style/chipText"
            app:chipMinTouchTargetSize="0dp" />
    </com.google.android.material.chip.ChipGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="33dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelBtn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_marginStart="21dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/shape_button_g400_24"
            android:text="취소하기"
            android:fontFamily="@font/wantedsans_bold"
            android:textSize="14sp"
            android:textColor="@color/azure_radience_50" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nextBtn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="21dp"
            android:background="@drawable/shape_button_b500_24"
            android:text="시작하기"
            android:fontFamily="@font/wantedsans_bold"
            android:textSize="14sp"
            android:textColor="@color/white" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>