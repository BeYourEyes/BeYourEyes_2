<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:background="@drawable/allergy_chip_background"
    android:gravity="center">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chipImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/sample_pasta" />


    <TextView
        android:id="@+id/chipText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/wantedsans_semibold"
        android:gravity="center"
        android:text="OOO"
        android:textColor="@color/basic_950"
        android:textSize="14sp" />
</LinearLayout>
