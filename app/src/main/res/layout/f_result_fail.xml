<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="148dp"
    android:background="@color/athens_gray_50"
    tools:context=".ResultFailFragment">

    <!-- TODO: Update blank fragment layout -->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/groupLayout"
        android:layout_width="213dp"
        android:layout_height="82dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/result_fail_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintEnd_toEndOf="@+id/groupLayout"
            app:layout_constraintStart_toStartOf="@+id/groupLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/result_failed_img" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/wantedsans_semibold"
            android:text="@string/result_fail_text"
            android:textColor="@color/athens_gray_950"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/groupLayout"
            app:layout_constraintStart_toStartOf="@+id/groupLayout"
            app:layout_constraintTop_toBottomOf="@+id/result_fail_image" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>