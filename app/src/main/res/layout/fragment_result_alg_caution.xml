<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/result_background"
    android:gravity="center"
    tools:context=".ResultAlgCautionFragment">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginRight="16dp"
        android:src="@drawable/warning" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/algCautionText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alg_caution_text1"
            android:textColor="@color/gray_950"
            android:fontFamily="@font/wantedsans_bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/algCautionText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alg_caution_text2"
            android:textColor="@color/gray_950"
            android:fontFamily="@font/wantedsans_bold"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>