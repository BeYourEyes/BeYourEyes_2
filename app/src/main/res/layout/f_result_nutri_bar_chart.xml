<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="512dp"
    android:background="@drawable/result_background"
    android:orientation="vertical"
    android:padding="17dp"
    tools:context=".ResultNutriBarFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/result_bar_chart_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/wantedsans_extrabold"
        android:text="@string/result_nutri_bar_chart_text1"
        android:textColor="@color/text_default"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nutri_bar_result_na"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/wantedsans_bold"
            android:gravity="center|left"
            android:text="@string/nutri_na"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/nutri_bar_result_na_quant"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/wantedsans_extrabold"
            android:gravity="center|left"
            android:text="150mg"
            android:textColor="@color/azure_radience_700" />

        <TextView
            android:id="@+id/naDV"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:gravity="right|center"
            android:text="권장 섭취량 00g"
            android:fontFamily="@font/wantedsans_semibold"
            android:textSize="13sp"
            android:textColor="@color/spacer" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/naBarchart"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nutri_bar_result_carb"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:fontFamily="@font/wantedsans_bold"
            android:gravity="center|left"
            android:text="@string/nutri_carb"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/nutri_bar_result_carb_quant"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/wantedsans_extrabold"
            android:gravity="center|left"
            android:text="18.2g"
            android:textColor="@color/azure_radience_700" />

        <TextView
            android:id="@+id/carbDV"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:gravity="right|center"
            android:text="권장 섭취량 00g"
            android:fontFamily="@font/wantedsans_semibold"
            android:textSize="13sp"
            android:textColor="@color/spacer" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/carbBarchart"
            android:layout_width="match_parent"
            android:padding="0dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nutri_bar_result_sugar"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:fontFamily="@font/wantedsans_bold"
            android:gravity="center|left"
            android:text="@string/nutri_sugar"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/nutri_bar_result_sugar_quant"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/wantedsans_extrabold"
            android:gravity="center|left"
            android:text="1.3g"
            android:textColor="@color/azure_radience_700" />

        <TextView
            android:id="@+id/sugarDV"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:gravity="right|center"
            android:text="권장 섭취량 00g"
            android:fontFamily="@font/wantedsans_semibold"
            android:textSize="13sp"
            android:textColor="@color/spacer" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/sugarBarchart"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nutri_bar_result_fat"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:fontFamily="@font/wantedsans_bold"
            android:gravity="center|left"
            android:text="@string/nutri_fat"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/nutri_bar_result_fat_quant"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/wantedsans_extrabold"
            android:gravity="center|left"
            android:text="52g"
            android:textColor="@color/azure_radience_700" />

        <TextView
            android:id="@+id/fatDV"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:gravity="right|center"
            android:text="권장 섭취량 00g"
            android:fontFamily="@font/wantedsans_semibold"
            android:textSize="13sp"
            android:textColor="@color/spacer" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/fatBarchart"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nutri_bar_result_chole"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:fontFamily="@font/wantedsans_bold"
            android:gravity="center|left"
            android:text="@string/nutri_chole"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/nutri_bar_result_chole_quant"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/wantedsans_extrabold"
            android:gravity="center|left"
            android:text="0g"
            android:textColor="@color/azure_radience_700" />

        <TextView
            android:id="@+id/choleDV"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:gravity="right|center"
            android:text="권장 섭취량 00g"
            android:fontFamily="@font/wantedsans_semibold"
            android:textSize="13sp"
            android:textColor="@color/spacer" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/choleBarchart"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nutri_bar_result_protein"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:fontFamily="@font/wantedsans_bold"
            android:gravity="center|left"
            android:text="@string/nutri_protein"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/nutri_bar_result_protein_quant"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/wantedsans_extrabold"
            android:gravity="center|left"
            android:text="0g"
            android:textColor="@color/azure_radience_700" />

        <TextView
            android:id="@+id/proteinDV"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:gravity="right|center"
            android:text="권장 섭취량 00g"
            android:fontFamily="@font/wantedsans_semibold"
            android:textSize="13sp"
            android:textColor="@color/spacer" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/proteinBarchart"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_weight="1" />
    </LinearLayout>


</LinearLayout>