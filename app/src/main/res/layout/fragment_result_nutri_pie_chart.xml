<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/shape_result_fragment_background_white_stroke_10"
    android:orientation="vertical"
    tools:context=".ui.foodDetail.ResultNutriPieFragment">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/result_nutri_pie_chart_text1"
        android:fontFamily="@font/wanted_sans_bold"
        android:textColor="@color/gray_950"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/result_nutri_pie_chart_text2"
        android:fontFamily="@font/wanted_sans_semi_bold"
        android:textColor="@color/gray_700"
        android:textSize="14sp" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/resultNutriPiehart"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="14dp"
        android:layout_gravity="center"/>

</LinearLayout>