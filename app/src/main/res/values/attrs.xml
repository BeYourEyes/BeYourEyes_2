<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 오늘 섭취한 상세 영양소 바 Custom View 속성 -->
    <declare-styleable name="IntakeBar">

        <!-- String 속성 : 영양소명, 영양소량, 일일 권장량 -->
        <attr name="nutritionName" format="string"/>
        <attr name="massText" format="string"/>
        <attr name="dailyValueText" format="string"/>

        <!-- Integer 속성 : 경고 임계값(상한/하한), 바의 최대값(권장량), 바의 입력값(섭취량) -->
        <attr name="upperThresh" format="integer"/>
        <attr name="lowerThresh" format="integer"/>
        <attr name="maxValue" format="integer"/>
        <attr name="curValue" format="integer"/>

    </declare-styleable>

    <!-- 과거 분석한 영양 기록 Custom View 속성 -->
    <declare-styleable name="FoodHistoryView">

        <!-- String 속성 : 기록명, 기록 칼로리 -->
        <attr name="historyLabel" format="string"/>
        <attr name="kcalText" format="string"/>

        <!-- Reference 속성 : 기록 이미지 -->
        <attr name="historyImg" format="reference"/>

    </declare-styleable>

    <!-- 툴바 Custom View 속성 -->
    <declare-styleable name="CustomToolbar">

        <!-- String 속성 : 화면 제목 -->
        <attr name="title" format="string"/>

        <!-- Boolean 속성 : 건너뛰기 메뉴 활성화 -->
        <attr name="skipEnabled" format="boolean"/>

    </declare-styleable>


</resources>